# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 5

    color_good = "#d9d9d9"
    color_degraded = "#ffc300"
    color_bad = "#c44536"
    
    output_format = i3bar
}

order += "battery all"
order += "memory"
order += "cpu_usage"
order += "volume master"
order += "tztime local"
order += ""

battery all {
    format = "%status %percentage"
    status_full = ""
    status_chr = ""
    status_bat = ""
    status_unk = " ?"

    integer_battery_capacity = true
    last_full_capacity = true
    threshold_type = "percentage"
    low_threshold = 25
}

memory {
    format = " %percentage_used"
}

cpu_usage {
    format = " %usage"
    max_threshold = 80
}

volume master {
    format = ": %volume"
    format_muted = " : %volume"

    device = "pulse"
    mixer = "Master"
}

tztime local {
    format = "%time "
    format_time = "%-d/%b/%Y - %H:%M |"
    align = "center"
}
