# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = true
    interval = 5

    color_good = "#00AA55"
    color_degraded = "#BBBB00"
    color_bad = "#AA0000"
}

#order += "wireless _first_"
order += "battery all"
order += "memory"
order += "cpu_usage"
order += "volume master"
order += "tztime local"
order += ""

wireless _first_ {
    format_up = " %essid"
    format_down = " DOWN "
}

battery all {
    format = "%status %percentage"
    status_full = ""
    status_chr = ""
    status_bat = ""
    status_unk = " ?"

    integer_battery_capacity = true
    last_full_capacity = True
    threshold_type = "percentage"
    low_threshold = 25
}

memory {
    format = " %percentage_used"
}

cpu_usage {
    format = " %usage"
        max_threshold = 80
}

volume master {
    format = ": %volume"
        format_muted = " : %volume"

        device = "pulse"
        mixer = "Master"
}

tztime local {
    format = "%time "
    format_time = "%-d/%b/%Y - %H:%M |"
    align = "center"
}
